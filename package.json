{
  "name": "c-tech-solutions",
  "version": "1.0.0",
  "description": "C-Tech Solutions Education Platform",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/server.js",
    "client:dev": "live-server --port=3000 --host=localhost",
    "build": "npm run build:client && npm run build:server",
    "build:client": "mkdir -p dist && cp -r C\\ tech\\ Solutions/* dist/ && cp -r Portfolio dist/ && cp *.html *.css *.js dist/",
    "build:server": "echo 'Server build completed'",
    "start": "node server/server.js",
    "db:setup": "node server/setup-db.js",
    "db:seed": "node server/seed-db.js",
    "test": "jest",
    "lint": "eslint server/**/*.js *.js",
    "deploy": "npm run build && npm run deploy:server",
    "deploy:server": "echo 'Deploy to your hosting platform'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "keywords": ["education", "learning", "platform", "c-tech"],
  "author": "C-Tech Solutions",
  "license": "MIT"
}
